<!--    Cities-->
    <changeSet id="2.3.1" author="ItMaker">
        <insert tableName="catalog">
            <column name="title" value="Salihorsk"/>

            <column name="parent_id" valueComputed="(SELECT id FROM catalog WHERE title='Minsk Region')"/>
        </insert>
    </changeSet>

    <changeSet id="2.3.2" author="ItMaker">
        <insert tableName="catalog">
            <column name="title" value="Slutsk"/>

            <column name="parent_id" valueComputed="(SELECT id FROM catalog WHERE title='Minsk Region')"/>
        </insert>
    </changeSet>
    
    <changeSet id="2.0.1" author="ItMaker">
        <modifyDataType tableName="catalog" columnName="id" newDataType="BIGINT"/>

        <modifyDataType tableName="catalog" columnName="parent_id" newDataType="BIGINT"/>
    </changeSet>

</databaseChangeLog>

